GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-8b-instant

# Core runtime
APP_ENV=dev
APP_NAME=Mnemos
DEBUG=false
LOG_LEVEL=INFO

# Data stores
DATABASE_URL=sqlite:///memory/app.db
ENABLE_MONGO=false
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=ai_chat_memory
QDRANT_URL=https://your-cluster.region.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION=mnemos_semantic_memory
REQUIRE_QDRANT=false
REDIS_URL=redis://localhost:6379/0

# Embeddings + semantic memory
ENABLE_SEMANTIC_MEMORY=true
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=bge-small-en-v1.5
EMBEDDING_DIMS=384
SEMANTIC_TOP_K=12
SEMANTIC_TOKEN_BUDGET=900
IMPORTANCE_DECAY_PER_DAY=0.985
IMPORTANCE_DROP_THRESHOLD=0.18
SEMANTIC_COMPRESSION_AGE_DAYS=14
SEMANTIC_COMPRESSION_MIN_CLUSTER=3

# Ranking weights (normalized internally)
MEM_RANK_WEIGHT_SIMILARITY=0.60
MEM_RANK_WEIGHT_IMPORTANCE=0.25
MEM_RANK_WEIGHT_RECENCY=0.15

# Orchestrator and LLM controls
LLM_TIMEOUT_SECONDS=30
LLM_RETRY_COUNT=2
LLM_RETRY_BACKOFF_SECONDS=0.8
MAX_PROMPT_CHARS=6000

# Cost tracking (set provider rates if needed)
LLM_COST_INPUT_PER_1K=0
LLM_COST_OUTPUT_PER_1K=0

# Security
JWT_SECRET=CHANGE_ME_SECRET
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL_MIN=30
JWT_REFRESH_TTL_DAYS=7
ENABLE_PROMPT_GUARD=true
RATE_LIMIT_RPM=60
ENABLE_TOOL_SANDBOX=true
# App auth fallback
APP_USERNAME=your_username
APP_PASSWORD=your_password

# Feature toggles
ENABLE_REALTIME_WEB=true
ENABLE_STREAMING=true
ENABLE_TOOLS=true
ENABLE_BACKGROUND_TASKS=true

# Streaming
STREAM_CHUNK_WORDS=3
STREAM_DELAY_MS=12

# Tool execution
TOOL_TIMEOUT_SECONDS=6
MAX_TOOL_CALLS=3

# Legacy memory/chat controls
MAX_USER_CHAT_TOKENS=130000
CHAT_HISTORY_MAX_TOKENS=3200
CHAT_HISTORY_MAX_MESSAGES=40
LONG_TERM_PROFILE_MAX_ITEMS=40
SESSION_TEMP_FACTS_MAX_ITEMS=14
MEMORY_RETRIEVER_MAX_CANDIDATES=80
MEMORY_RETRIEVER_MAX_SELECTED=12
MEMORY_MAX_VALUES_PER_KEY=3
